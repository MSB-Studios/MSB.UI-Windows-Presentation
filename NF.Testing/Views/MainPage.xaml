<Page x:Class="NF.Testing.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:msb="http://ui.msb-studios.com/winfx/xaml"
      mc:Ignorable="d"
      
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource PageBackground}" Foreground="{DynamicResource PageForeground}"
      Title="MainPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontWeight="SemiBold" TextAlignment="Center"
               Text=".NET Framework Testing"/>
        <Button Click="OnShowTeachingTipButtonClick" Margin="0 8px"
                Style="{StaticResource AccentButtonStyle}">Show TeachingTip</Button>
        <Button Click="OnShowMessageDialogButtonClick">Show MessageDialog</Button>
        <msb:TeachingTip x:Name="TT"/>
    </StackPanel>
</Page>
