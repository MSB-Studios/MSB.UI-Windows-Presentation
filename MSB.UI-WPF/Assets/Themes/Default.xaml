<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="OverlayCornerRadius">12</CornerRadius>

    <Color x:Key="ApplicationAccentColor">#FF5182</Color>

    <Color x:Key="ControlDisabledBackColor">#F5F5F5</Color>
    <Color x:Key="ControlDisabledBorderColor">#E5E5E5</Color>
    <Color x:Key="ControlDisabledForeColor">#9A9A9A</Color>

    <Color x:Key="DropShadowColor">#000000</Color>

    <SolidColorBrush x:Key="ApplicationTransparentBrush"
                     Color="Transparent"/>

    <SolidColorBrush x:Key="WindowChromeBackground"
                     Color="#FFFFFF"/>
    <SolidColorBrush x:Key="WindowChromeBorderBrush"
                     Color="{DynamicResource ApplicationAccentColor}"/>
    <SolidColorBrush x:Key="WindowChromeBorderBrushInactive"
                     Color="#696969"/>
    <SolidColorBrush x:Key="WindowTitleBarBackground"
                     Color="#FFFFFF"/>

    <SolidColorBrush x:Key="CaptionButtonBackground"
                     Color="Transparent"/>
    <SolidColorBrush x:Key="CaptionButtonForeground"
                     Color="#000000"/>
    <SolidColorBrush x:Key="CaptionButtonBackgroundPointerOver"
                     Color="#EDEDED"/>
    <SolidColorBrush x:Key="CaptionButtonForegroundPointerOver"
                     Color="#000000"/>
    <SolidColorBrush x:Key="CaptionButtonBackgroundPressed"
                     Color="#E9E9E9"/>
    <SolidColorBrush x:Key="CaptionButtonForegroundPressed"
                     Color="#000000"/>
    <SolidColorBrush x:Key="CaptionButtonBackgroundDisabled"
                     Color="Transparent"/>
    <SolidColorBrush x:Key="CaptionButtonForegroundDisabled"
                     Color="#9A9A9A"/>

    <SolidColorBrush x:Key="LightDismissLayerBrush"
                     Color="#0C000000"/>

    <SolidColorBrush x:Key="FlyoutBackground"
                     Color="#FFFFFF"/>
    <SolidColorBrush x:Key="FlyoutBorderBrush"
                     Color="#969696"/>

</ResourceDictionary>